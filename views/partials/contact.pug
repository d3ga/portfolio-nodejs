.container.contact-container#contact
    .row
        .col-12
            h3.title.text-left Contact
        .contact-background.mx-auto
            .col-xs-12.col-md-12.col-lg-12
                form.form
                    .form-group
                        label(
                            for='inputname'
                            ) Name 
                        input.border-top-0.border-left-0.border-right-0(
                            type='text',
                            class='form-control',
                            id='name',
                            placeholder='your name here'
                            ) 
                    
                    .form-group
                        label(
                            for='email'
                            ) Email 
                        input.border-top-0.border-left-0.border-right-0(
                            type='email',
                            class='form-control',
                            id='email'
                            placeholder='your@email.com'
                            ) 
                    
                    .form-group
                        textarea.border-top-0.border-left-0.border-right-0(
                            class='form-control',
                            rows='5',
                            placeholder='your message'
                            )

                    .form-group.text-center
                        button.btn.btn-outline-light(
                            type='submit'
                        ) Send