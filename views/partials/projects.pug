.container.projects-container#projects
    .row
        .col-12
            h3.title.text-left.section-title.text-center Projects
    .row        
        each project in helpers.projectThumbnails
            .col-12.col-md-6
                .project-thumbnail
                    img.img-thumbnail.border-0.rounded-0(src=`${project.src}` alt=`${project.alt}`)
                    a.project-thumbnail-mask(href=`${project.href}` target="_blank" rel="noopener")
                        h4.project-title= `${project.title}`
                        p.project-description= `${project.description}`
                            