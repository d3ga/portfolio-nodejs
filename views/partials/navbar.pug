nav.navbar.fixed-top.navbar-light

    a.navbar-brand(href='/' ) Degaitas

    button.navbar-toggler(
        type='button'
        data-toggle='collapse' 
        data-target='#navbarNavAltMarkup' 
        aria-controls='navbarNavAltMarkup' 
        aria-expanded='false' 
        aria-label='Toggle navigation' 
    )
        span.navbar-toggler-icon
            span.bar.top-bar
            span.bar.middle-bar
            span.bar.bottom-bar

    .collapse.navbar-collapse.text-right#navbarNavAltMarkup
        ul.navbar-nav.ml-auto.collapse
            each entry in helpers.navigation
                li.nav-item
                    a.nav-link(
                        href=`${entry.href}`,
                        class=(currentPath === entry.href ? 'active' : '')
                    ) #{entry.name}